{
  "include": [
    "src/**/*",
    "dist/**/*",
    "test/**/*",
    "./*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "src/components/*"
      ]
    }
  }
}